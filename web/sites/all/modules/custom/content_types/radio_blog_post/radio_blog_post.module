<?php

/**
* Implements hook_node_presave()
*
* Set field_is_blog_author_show_host programmatically
*
* @param $node
*/
function radio_blog_post_node_presave($node) {
  if ($node->type != 'blog_post') {
    return;
  }

  $isShowHost = BlogPostContentType::isAuthorShowHost($node);
  $node->field_is_show_host['und'][0]['value'] = (int)$isShowHost;
}
