/**
 * Implements hook_menu().
 */
function radio_station_menu() {
  $routes = RadioStationCallbacks::buildRoutes();
  return $routes;
}


function radio_station_get_episode($direction, $timestamp) {
  $episode = RadioStationCallbacks::getEpisode($direction, $timestamp);
  drupal_json_output($episode);
}


function radio_station_get_day($direction, $timestamp) {
  $episode = RadioStationCallbacks::getDay($direction, $timestamp);
  drupal_json_output($episode);
}


function radio_station_get_week($direction, $timestamp) {
  $episode = RadioStationCallbacks::getWeek($direction, $timestamp);
  drupal_json_output($episode);
}
