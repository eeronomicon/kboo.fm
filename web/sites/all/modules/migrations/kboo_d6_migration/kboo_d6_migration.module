/**
 * Implements hook_migrate_api().
 * Sets the API to the most up-to-date version
 */
function kboo_d6_migration_migrate_api() {
  $api = array(
    'api' => 2,
    'groups' => array(
      'Comments' => array(
        'title' => t('Comment migrations'),
      ),
      'Content Types' => array(
        'title' => t('Content type migrations')
      ),
      'Core' => array(
        'title' => t('Core migrations'),
      ),
      'Taxonomy' => array(
        'title' => t('Taxonomy migrations'),
      ),
    ),

  );
  return $api;
}

/**
 * Implements hook_flush_caches().
 * Register migrations on cache clear
 */
function kboo_d6_migration_flush_caches() {
  KBOOMigrationRegistration::register();
}
