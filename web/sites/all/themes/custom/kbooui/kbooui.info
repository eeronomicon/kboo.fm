name = KBOO UI Theme
description = The new KBOO
core = 7.x
base theme = bootstrap


; Disable BootstrapCDN
settings[bootstrap_cdn] = ''


;;;;;;;;;;;;;;;;;;;;;
;; Regions
;;;;;;;;;;;;;;;;;;;;;

; Drupal required regions
regions[help] = 'Help'
regions[content] = 'Content'
regions[page_top] = 'Page top'
regions[page_bottom] = 'Page bottom'


;;;;;;;;;;;;;;;;;;;;;
;; Stylesheets
;;;;;;;;;;;;;;;;;;;;;


; Bootstrap and Project styles
stylesheets[all][] = css/style.css


; Bootstrap Grid Column Clearing
; https://github.com/sixfootsixdesigns/Bootstrap-3-Grid-Columns-Clearing
stylesheets[all][] = 'bower_components/bootstrap-grid-columns-clearing/css/multi-columns-row.css'


; Font Awesome
stylesheets[all][] = bower_components/fontawesome/css/font-awesome.css


; YAMM
; stylesheets[all][] = bower_components/yamm3/yamm/yamm.css


